  <style type="text/css">
	#intro div {
		margin-bottom: 5px;
	}
	#intro img {

	}
	#signin .credentials input {
		width: 140px;
	}
	#signin .options p {
		margin-top: 5px
	}
	#signupform input {
		width: 380px;
		height: 27px;
		margin-bottom: 8px;
		margin-left: 10px;
	}
  </style>

  <!-- Uncomment if you are specifically targeting less enabled mobile browsers
  <link rel="stylesheet" media="handheld" href="css/handheld.css?v=2">  -->

  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <%#*<script src="js/libs/modernizr-1.7.min.js"></script>%>
  <%= javascript_include_tag "libs/modernizr-1.7.min" %>

</head>

<body>

  <div id="container">
  <!-- Content -->
    <header>
		<div class="container_12">
 
                  <div class="grid_6"> <img src="/images/daino.png" width="52px" height="52px" alt="logo"/>
                          <img src="images/dblogo.png" alt="Daino Logo"/> </div>
			<div class="grid_6" id="signin" >
                          <form action=""  method="post">
					<fieldset class="credentials">
						<div align="left">
							<input id="username" type="text" autocomplete="on" placeholder="Username" name="user_session[email]" />
							<input id="password" type="password" autocomplete="on" placeholder="Password" name="session[password]" value="" />
							<button> Sign in </button>
						</div>
					</fieldset>
                                        <!--
					<fieldset class="options">
						<div align="left">
							<p>
							<label class="remember">
								<input type="checkbox" name="remember" value="1"/>
								<span> Remember </span>
							</label>
							| <a href="forgot"> Forgot Password? </a>
							</p>
						</div>
					</fieldset>
                                        -->
				</form>
			</div>
			<div class="clear"></div>
		</div>
    </header>

    <div id="main" role="main" class="mbody">
    <!-- Body Content -->
    	<div class="container_12">


    		<div class="grid_5" id="signupform">
    			<%= form_for @user_session do |f| %>
    			<div> <h2> New to DainoBook? <strong> Join Today! </strong> </h2> </div>
    			<hr/>
    			<fieldset>
    				<div> <input type="text" id="firstname" name="user[first_name]" placeholder="First Name" /> </div>
    				<div> <input type="text" id="lastname" name="user[last_name]" placeholder="Last Name"/>   </div>
    				<div> <input type="text" id="email" name="user[email]"  placeholder="Email"/> </div>
    				<div> <input type="text" id="password" name="user[password]"  placeholder="Password" />     </div>
    				<div> <input type="text" id="confirmpassword" name="user[password_confirmation]"  placeholder="Confirm Password" /> </div>
    				<div align="right"> <button> Sign Up! </button> </div>
    			</fieldset>
    			</form>
    		</div>

			<div class="grid_1"> &nbsp; </div>

    		<div class="grid_6" id="intro">
    			<div class="grid_6 alpha omega">
    				<h1> Stay connected with your peers! </h1>
    			</div>
    			<hr/>
    			<div class="clear"></div>
    			<div class="grid_3 alpha"> <h3> <img src="images/intro_icon_designfloat.png"/> Socialize </h3> <p> Easily interact with peers, bosses and subordinates in your organization </p> </div>
   				<div class="grid_3 omega"> <h3> <img src="images/intro_icon_designbump.png"/> Know </h3> <p> Easily interact with peers in your organization and know what's going around you </p> </div>
    			<div class="clear"> </div>
   				<div class="grid_3 alpha"> <h3> <img src="images/intro_icon_rss.png"/> Share </h3> <p> Broadcast yourself with confidence. Our automatic privacy settings systems make sure that your information stays within bounds without lot of tweaking </p> </div>
    			<div class="grid_3 omega"> <h3> <img src="images/intro_icon_email.png"/> Cross-Platform </h3> <p> Easily integrate your Daino account with other communication services such as Email, IM etc. </p> </div>
    			<div class="clear"> </div>
    		</div>


    		<div class="clear"></div>

    		<!--
    		<div class="grid_6"> A </div>
    		<div class="grid_3"> B </div>
    		<div class="grid_3"> C </div>
    		<div class="clear"> </div>
    		-->
    	</div>
  	<!-- End Body Content -->
    </div>

	<footer>
		<div class="container_12">
			<div class="grid_12" align="center">
				<a href='/tos/'>Terms of services</a> | <a href='/about-us/'>About Us</a> | <a href='/about-us/'>Contact us</a> | <small>Copyright (C) 2011 - All Copies Are Right </small>
			</div>
			<div class="clear"></div>
		</div>
    </footer>
  </div> <!-- eo #container -->

  <%#*<script>window.jQuery || document.write("<script src='js/libs/jquery-1.5.1.min.js'>\x3C/script>")</script>%>
  <%= javascript_include_tag "libs/jquery-1.5.1.min.js" %>

