<% unless @user.requested_friends.empty? %>
<div style="float:left;">
<% @user.requested_friends.each do |u| %>
  <div style="width:200;float:left;">
<%= image_tag u.profile_picture.url(:small) %>
<div>
	<strong><%= u.full_name %> </strong> <br/>
	Since <%= u.created_at.to_s(:long) %>
</div>
<%= link_to '[Cancel]', user_friend_path(:user_id => current_user, :id => u), :class=>"reject-request", :method => :delete, :confirm => 'Are you sure?' %> <br/>
	</div>
<% end %>
</div>
<% else %>
None
<% end %>
