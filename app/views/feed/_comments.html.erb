
          <div id="comments_div_<%=status.id%>" class="comments_div" style="display:none;">
            <table border="0" cellpadding="0" cellspacing="0">
        <% status.comments.each do |comment| %>
<%= render(:partial => "feed/comment", :locals => {:comment =>comment}).html_safe %>
	<% end%>    
	<tr>
              <td class="comment_down_border comment_left_column">
                <img src="<%=  current_user.profile_picture.url(:small) %>" width="20px"alt="profilepic"/>
              </td>
		<%= render :partial => "feed/post_comment", :locals=>{:activity_id =>status.id} %> 
            </tr>
            </table>
          </div>
