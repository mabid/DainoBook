<script type="text/javascript">

$(function() {
	$("#post_status").click(function(){
		$.ajax({
			type: 'POST',
			url: '/wall/status',
			data: "status[text]="+$("#status").val(),
			success: function(data){
				alert(data);
			},
			dataType: 'json'
		});

		}
	);

	$("#post_link").click(function(){
		$.ajax({
			type: 'POST',
			url: '/wall/link',
			data: "link[url]="+$("#link").val(),
			success: function(data){
				alert(data);
			},
			dataType: 'json'
		});

		}
	);
});


</script>
