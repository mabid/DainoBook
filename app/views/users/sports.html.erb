<% content_for :sidebar do %>
	<%= render 'users/edit_profile_sections'%>
<% end %>

<% unless flash[:notice].blank? %>
<div class="notice">
  <%= flash[:notice].to_s %>
</div>
<% end %>
<div class='notice_blue' id="forms-login" style="width:350px;">
	<div class='notice_head' id="right-pane-head">
		
		<h2>Sports</h2></div>
	<div class='notice_body'>
		<%= form_for(@user) do |f| %>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
			<table>
				<tr><td colspan='2'></td></tr>
				<tr><th><label for="id_username">Sports Played</label></th>
					<td>
						<%= f.text_area :sports_played, :class => "text required email", :style=>"width: 140px;" %>
					</td>
				</tr>
				<tr><th><label for="id_password">Favorite Team</label></th>
					<td>
						<%= f.text_area :favorite_team, :class => "text required", :style=>"width: 140px;" %>
					</td>
				</tr>
				<tr><th><label for="id_password">Favorite Athletes</label></th>
					<td>
						<%= f.text_area :favorite_athletes, :class => "text required", :style=>"width: 140px;" %>
					</td>
				</tr>
				<tr>
					<td></td>
					<td><%= f.submit "Save", :class => "blue-button" %>
					</td>
				</tr>

			</table>
		<% end %>
	</div>
</div>
