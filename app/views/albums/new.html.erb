
<table class='n_content' width='100%' cellspacing='0px' cellpadding='2px'>
  <tr>
    <td colspan='2'>
      <div id='new_msg_status' style='display:none;width:350px;' align='center'>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan='2'>
    </td>
  </tr>
  <tr>
    <td class='left_col'>
      <div class='notice_blue'>
        <div class='notice_head'><h2>Add new Album</h2></div>
        <div class='notice_body'>
          <br />
          <br />
          Please enter Album information below
          <br />

          <br />
          <%= form_for([:user, @album]) do |f| %>
            <ul>
              <% @album.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
            <table cellspacing='0' cellpadding="0" class="form_tbl">
              <tr>
                <th><label for="id_first_name">Album Name</label></th>
                <td>
                  <%= f.text_field :name, :class => "text required" %>
                  <%#*<input id="id_first_name" maxlength="50" type="text" name="first_name" size="35" />%>
                </td>
              </tr>
              <tr>
                <th><label for="id_last_name">Description</label></th>
                <td>
                  <%= f.text_field :description, :class => "text required" %>
                  <%#*<input id="id_last_name" maxlength="50" type="text" name="last_name" size="35" />%>
                </td>
              </tr>
              <tr>
                <th><label for="id_email">Location</label></th>
                <td>
                  <%= f.text_field :location, :class => "text email required" %>
                  <%#*<input id="id_email" type="text" name="email" size="35" />%>
                </td>
              </tr>
              <tr>
                <td colspan='2'>
                  <%= f.submit "Create", :class => "blue-button" %>
                  <%#*<input type='submit' value='Submit'></input>%>
                </td>
              </tr>
            </table>
          <% end %>
        </div>
      </div>
    </td>
  </tr>
</table>
